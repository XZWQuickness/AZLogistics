<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <View style="@style/lin" />

    <View
        style="@style/lin"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            style="@style/TextView"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="手机号" />

        <EditText
            style="@style/editextMultiLine"
            android:id="@+id/ed_phone"
            android:hint="请输入注册手机号" />


    </LinearLayout>

    <View style="@style/lin" />

    <RelativeLayout
        style="@style/match_wrap"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_code"
            style="@style/TextView"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="验证码" />

        <TextView
            android:id="@+id/code"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_login_blue_fill"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="获取验证码"
            android:textColor="@color/white" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ed_code"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@id/code"
            android:layout_toRightOf="@id/tv_code"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:hint="请输入注册手机号"
            android:inputType="number"
            android:singleLine="true"
            android:textColorHint="@color/hint_grary_color"
            android:textSize="16sp" />

    </RelativeLayout>

    <View style="@style/lin" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_blue_fill">

        <TextView
            android:id="@+id/tv_sumbnt_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="下一步"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>
</LinearLayout>