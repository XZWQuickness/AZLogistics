<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/match_wrap"
        android:id="@+id/rl_newst_order"
        android:background="@drawable/personitem"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_01"
            style="@style/wrap_content"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/iv_02"
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"

            android:background="@drawable/entiy_oval_gary" />

        <LinearLayout
            style="@style/match_wrap"
            android:layout_toLeftOf="@id/iv_02"
            android:layout_toRightOf="@id/iv_01"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏省徐州市淮海西路"
                android:id="@+id/tv_createAddress"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    style="@style/wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/time" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出发日期: 2016-4-30 12:06 出发"
                    android:id="@+id/tv_createDate"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="13sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="3dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    style="@style/wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/bangdan" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="磅单号:320326454646"
                    android:id="@+id/tv_poundNum"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="13sp" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="未完成,请在到达目的地后拍照确认"
                android:id="@+id/tv_weiwancheng"
                android:textColor="@color/text_shallow_gray"
                android:visibility="visible"
                android:layout_marginTop="8dp"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_state"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="江苏省徐州市永安路"
                android:layout_marginTop="6dp"
                android:id="@+id/tv_finishAddress"
                android:textSize="15sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    style="@style/wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/time" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="出发日期: 2016-4-30 12:06 出发"
                    android:id="@+id/tv_finishDate"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/text_shallow_gray"
                    android:textSize="13sp" />

            </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/app_bg"></View>

</LinearLayout>