<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <cn.exz.xugaung.activity.view.MyScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                style="@style/lin"
                android:layout_marginTop="10dp" />

            <LinearLayout
                style="@style/match_wrap"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/match_wrap"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextView"
                            android:paddingLeft="10dp"
                            android:text="真实姓名" />

                        <TextView
                            style="@style/TextView"
                            android:layout_width="wrap_content"
                            android:text="*"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/ed_true_name"
                        style="@style/editext"
                        android:layout_marginLeft="30dp"
                        android:hint="请输入真实姓名"
                        android:textColor="@color/gary" />


                </LinearLayout>

                <View style="@style/lin" />

                <LinearLayout
                    style="@style/match_wrap"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            style="@style/TextView"
                            android:paddingLeft="10dp"
                            android:text="联系方式" />

                        <TextView
                            style="@style/TextView"
                            android:layout_width="wrap_content"
                            android:text="*"
                            android:textColor="@color/red" />
                    </LinearLayout>


                    <EditText
                        android:id="@+id/ed_contact_mode"
                        style="@style/editext"
                        android:layout_marginLeft="30dp"
                        android:hint="请输入联系方式"
                        android:textColor="@color/gary" />


                </LinearLayout>

                <View style="@style/lin" />

                <LinearLayout
                    style="@style/match_wrap"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="@style/TextView"
                            android:paddingLeft="10dp"
                            android:text="驾驶证号" />

                        <TextView
                            style="@style/TextView"
                            android:layout_width="wrap_content"
                            android:text="*"
                            android:textColor="@color/red" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/ed_drivingLicenseNum"
                        style="@style/editext"
                        android:layout_marginLeft="30dp"
                        android:hint="请输入驾驶证号"
                        android:textColor="@color/gary" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/lin" />

            <LinearLayout
                style="@style/match_wrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:visibility="gone"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView"
                        android:paddingLeft="10dp"
                        android:text="驾驶证号" />

                    <TextView
                        style="@style/TextView"
                        android:layout_width="wrap_content"
                        android:text="*"
                        android:textColor="@color/red" />
                </LinearLayout>

                <EditText
                    android:id="@+id/ed_IDCar_num"

                    style="@style/editext"
                    android:layout_marginLeft="30dp"
                    android:hint="请输入驾驶证号"
                    android:textColor="@color/gary" />
            </LinearLayout>


            <LinearLayout
                style="@style/match_wrap"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextView"
                    android:layout_width="wrap_content"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/textView3"
                    style="@style/TextView"
                    android:paddingLeft="10dp"
                    android:text="完善身份证件信息"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/lin" />

            <LinearLayout
                style="@style/match_wrap"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    style="@style/match_wrap"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/iv_IDCardFrontImg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:background="@drawable/id_card_front_img" />

                    <ImageView
                        android:id="@+id/iv_IDCardBackImg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:background="@drawable/id_card_back_img" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <LinearLayout
                    style="@style/match_wrap"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/iv_holdIDCardImg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:scaleType="center"
                        android:layout_weight="1"
                        android:background="@drawable/shouchijiashizhengzhaopian" />

                    <ImageView
                        android:id="@+id/iv_drivingLicenseImg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:scaleType="center"
                        android:background="@drawable/drivinglicenseimg" />

                </LinearLayout>

                <TextView
                    style="@style/TextView"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="1dp"
                    android:lineSpacingMultiplier="1"
                    android:paddingLeft="10dp"
                    android:text="温馨提示:请上传相关证件,并保持证件图像号码清晰。驾驶证照片须拍摄含有本人照片那页,手持身份证照片须拍摄半身照。"
                    android:textSize="12sp" />

                <LinearLayout
                    style="@style/match_wrap"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <ImageView
                        style="@style/wrap_content"
                        android:layout_gravity="center_vertical"

                        android:background="@drawable/ask" />

                    <TextView
                        style="@style/TextView"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="点击查看相关图示"

                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/lin" />

            <LinearLayout
                style="@style/match_wrap"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    style="@style/TextView"
                    android:layout_width="wrap_content"
                    android:text="*"
                    android:textColor="@color/red" />

                <TextView
                    style="@style/TextView"
                    android:paddingLeft="10dp"
                    android:text="完善车辆信息"
                    android:textColor="@color/text_gray"
                    android:textSize="14sp" />
            </LinearLayout>

            <View style="@style/lin" />

            <LinearLayout
                style="@style/match_wrap"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/TextView"
                        android:paddingLeft="10dp"
                        android:text="车牌号" />

                    <TextView
                        style="@style/TextView"
                        android:layout_width="wrap_content"
                        android:text="*"
                        android:textColor="@color/red" />
                </LinearLayout>

                <EditText
                    android:id="@+id/ed_plateNum"
                    style="@style/editext"
                    android:layout_marginLeft="30dp"
                    android:hint="请输入完整车牌号"
                    android:textColor="@color/gary" />
            </LinearLayout>

            <View style="@style/lin" />

            <LinearLayout
                style="@style/match_wrap"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="10dp">

                <LinearLayout
                    style="@style/match_wrap"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp">

                    <ImageView
                        android:id="@+id/iv_truckImg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:background="@drawable/truckim" />

                    <ImageView
                        android:id="@+id/iv_travelLicenseImg"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:scaleType="fitXY"
                        android:background="@drawable/travellicenseimg" />

                </LinearLayout>


                <TextView
                    style="@style/TextView"
                    android:layout_marginTop="10dp"
                    android:lineSpacingExtra="1dp"
                    android:lineSpacingMultiplier="1"
                    android:paddingLeft="10dp"
                    android:text="温馨提示:请上传车辆照片及行驶证照片,并保持证件图像号码清晰。车辆照片须拍摄车头及车头记车牌号码,行驶证照片须拍摄含有车辆识别码那页。"
                    android:textSize="12sp" />

                <LinearLayout
                    style="@style/match_wrap"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <ImageView
                        style="@style/wrap_content"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/ask" />

                    <TextView
                        style="@style/TextView"
                        android:layout_gravity="center_vertical"
                        android:paddingLeft="10dp"
                        android:text="点击查看相关图示"

                        android:textSize="12sp" />

                </LinearLayout>
            </LinearLayout>

            <View style="@style/lin" />

            <View
                style="@style/lin"
                android:layout_marginTop="10dp" />

            <LinearLayout
                style="@style/match_wrap"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/match_wrap"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        style="@style/TextView"
                        android:layout_width="100dp"
                        android:paddingLeft="10dp"
                        android:text="紧急联系人" />


                    <EditText
                        android:id="@+id/ed_emergencyContactPerson"
                        style="@style/editext"
                        android:layout_marginLeft="20dp"
                        android:hint="请输入紧急联系人的姓名"
                        android:textColor="@color/gary" />

                </LinearLayout>

                <View style="@style/lin" />

                <LinearLayout
                    style="@style/match_wrap"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">


                    <TextView
                        style="@style/TextView"
                        android:layout_width="100dp"
                        android:paddingLeft="10dp"
                        android:text="紧急联系方式"

                        />


                    <EditText
                        android:id="@+id/ed_emergencyContactNumber"
                        style="@style/editext"
                        android:layout_marginLeft="20dp"
                        android:hint="请输入紧急联系方式"
                        android:textColor="@color/gary" />

                </LinearLayout>

                <View style="@style/lin" />

            </LinearLayout>

            <LinearLayout
                style="@style/match_wrap"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextView"
                    android:text="注:"
                    android:textSize="12sp" />

                <TextView
                    style="@style/TextView"
                    android:text="带"
                    android:textSize="12sp" />

                <TextView
                    style="@style/TextView"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="12sp" />


                <TextView
                    style="@style/TextView"
                    android:lineSpacingExtra="1dp"
                    android:lineSpacingMultiplier="1"
                    android:text="项目为必填项,请务必认真填写,保证信息真实有效。本平台将对此个人新信息内容进行严格保密。"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_login_blue_fill">

                <TextView
                    android:id="@+id/tv_sumbint_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:clickable="true"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="提交信息"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="30dp"
                android:gravity="center"
                android:text="客服热线:400-123-0000"
                android:textColor="@color/text_gray"
                android:textSize="12sp" />

        </LinearLayout>

    </cn.exz.xugaung.activity.view.MyScrollView>

    <include layout="@layout/gary_lin" />

</LinearLayout>