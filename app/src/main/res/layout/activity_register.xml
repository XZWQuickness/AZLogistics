<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:orientation="vertical">

    <include layout="@layout/top" />

    <include layout="@layout/gary_lin" />

    <View
        style="@style/lin"
        android:layout_marginTop="10dp" />


    <LinearLayout
        style="@style/match_wrap"
        android:background="@color/white"
        android:orientation="vertical">


        <LinearLayout
            style="@style/match_wrap"
            android:background="@color/white"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                style="@style/TextView"
                android:layout_width="60dp"
                android:paddingLeft="10dp"
                android:text="手机号" />

            <EditText
                android:id="@+id/ed_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:hint="请输入注册手机号"
                android:inputType="number"
                android:singleLine="true"
                android:textColorHint="@color/hint_grary_color"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            style="@style/lin"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            style="@style/match_wrap"
            android:background="@color/white"
            android:orientation="vertical">


            <RelativeLayout
                style="@style/match_wrap"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_code"
                    style="@style/TextView"
                    android:layout_width="60dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="验证码" />

                <TextView
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shape_login_blue_fill"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="获取验证码"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/ed_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@id/code"
                    android:layout_toRightOf="@id/tv_code"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColorHint="@color/hint_grary_color"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View
                style="@style/lin"
                android:layout_marginLeft="10dp" />

            <LinearLayout
                style="@style/match_wrap"
                android:background="@color/white"
                android:orientation="vertical">


                <LinearLayout
                    style="@style/match_wrap"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        style="@style/TextView"
                        android:layout_width="60dp"
                        android:paddingLeft="10dp"
                        android:text="密码" />

                    <EditText
                        android:id="@+id/ed_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:background="@null"

                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:hint="请设置登录密码"
                        android:inputType="numberPassword"
                        android:singleLine="true"
                        android:textColorHint="@color/hint_grary_color"
                        android:textSize="16sp" />

                </LinearLayout>

                <View style="@style/lin" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"

        android:padding="10dp">

        <CheckBox
            android:id="@+id/cb"
            style="@style/wrap_content"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:drawableLeft="@drawable/is_select" />

        <TextView
            style="@style/TextView"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:maxLines="1"
            android:text="我同意" />

        <TextView
            android:id="@+id/textView5"
            style="@style/TextView"
            android:singleLine="true"
            android:maxLines="1"
            android:text="《安至物流司机端用户服务协议》"
            android:textColor="@color/red" />


    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_blue_fill">

        <TextView
            android:id="@+id/tv_sumbnt_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="提交注册"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>