<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/top"></include>

    <include layout="@layout/gary_lin"></include>

    <RelativeLayout
        android:id="@+id/rl_share"
        style="@style/witheRelativeLayout">

        <ImageView
            android:id="@+id/iv_01"
            style="@style/wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/share" />

        <TextView
            style="@style/TextView"

            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_01"
            android:text="推荐朋友"
            android:textStyle="bold" />

        <ImageView
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/next" />
    </RelativeLayout>

    <include layout="@layout/gary_lin"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/lin_gray"></View>

    <RelativeLayout
        android:id="@+id/rl_alter_password"
        style="@style/witheRelativeLayout">

        <ImageView
            android:id="@+id/iv_02"
            style="@style/wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/password" />

        <TextView
            style="@style/TextView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_02"
            android:text="修改密码"
            android:textStyle="bold" />

        <ImageView
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/next" />
    </RelativeLayout>

    <include layout="@layout/gary_lin"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:background="@color/lin_gray"></View>

    <RelativeLayout
        android:id="@+id/rl_help"
        android:visibility="gone"
        style="@style/witheRelativeLayout">

        <ImageView
            android:id="@+id/iv_03"
            style="@style/wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/help" />

        <TextView
            style="@style/TextView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_03"
            android:text="使用帮助"
            android:textStyle="bold" />

        <ImageView
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/next" />
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/lin_gray"></View>

    <RelativeLayout
        android:id="@+id/rl_user_agreement"
        style="@style/witheRelativeLayout">

        <ImageView
            android:id="@+id/iv_04"
            style="@style/wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/xieyi" />

        <TextView
            style="@style/TextView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_04"
            android:text="用户协议"
            android:textStyle="bold" />

        <ImageView
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/next" />
    </RelativeLayout>

    <include layout="@layout/gary_lin"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/lin_gray"></View>

    <RelativeLayout
        android:id="@+id/rl_about_us"
        style="@style/witheRelativeLayout">

        <ImageView
            android:id="@+id/iv_05"
            style="@style/wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/guanyu" />

        <TextView
            style="@style/TextView"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_05"
            android:text="关于我们"
            android:textStyle="bold" />

        <ImageView
            style="@style/wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/next" />
    </RelativeLayout>

    <include layout="@layout/gary_lin"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"

        android:background="@drawable/shape_login_blue_fill">

        <TextView
            android:id="@+id/tv_finish_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="8dp"
            android:text="退出登录"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>

</LinearLayout>