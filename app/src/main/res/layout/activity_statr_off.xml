<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/match"
    android:orientation="vertical">

    <include layout="@layout/top"></include>

    <include layout="@layout/gary_lin"></include>

    <View
        style="@style/lin"
        android:layout_marginTop="10dp"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="车牌号"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_plateNum"
                style="@style/TextView"
                android:layout_width="match_parent"
                android:drawableRight="@drawable/next"
                android:paddingLeft="10dp"
                android:hint="请选择车牌号"
                android:textColor="@color/gary"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            style="@style/lin"
            android:layout_marginLeft="20dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="磅单号"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/ed_poundNum"
                style="@style/editext"
                android:hint="请输入磅单号"
                android:textColor="@color/gary"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            style="@style/lin"
            android:layout_marginLeft="20dp"></View>

        <View
            style="@style/lin"
            android:layout_marginLeft="20dp"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="位置"
                android:textColor="@color/text_gray"
                android:textSize="14sp" />

            <ImageView
                style="@style/wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/location_min"
                android:paddingLeft="10dp" />

            <TextView
                android:id="@+id/tv_createAddress"
                style="@style/TextView"
                android:paddingLeft="6dp"
                android:textColor="@color/gary"
                android:textSize="16sp" />

        </LinearLayout>

        <View style="@style/lin"></View>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_login_blue_fill">

        <TextView
            android:id="@+id/tv_sumint_start_off"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="提交出发"
            android:textColor="@color/white"
            android:textSize="16sp" />


    </LinearLayout>
</LinearLayout>